.PHONY: lint-bash

lint += lint-bash

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
lint-bash:
	find . -name '*.sh' -type f -print0 \
	    | $(xargs-nrie) shellcheck

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help ::
	@echo "  lint-bash          Run shellcheck on sources"

# [EOF]
