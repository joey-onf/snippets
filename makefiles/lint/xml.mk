include $(ONF_MK)/lint/xml-args.mk


.PHONY: lint-xml

lint += lint-xml

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------

lint-xml:
	find . -name '*.xml' -type f -print0 \
	    | $(xargs-nrie) xmllint $(xml-lint-args)

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help ::
	@echo "  lint-xml           Run xmllint on sources"

