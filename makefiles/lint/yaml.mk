# -*- makefile -*-
## -----------------------------------------------------------------------
## -----------------------------------------------------------------------

.PHONY: lint-yaml

lint += lint-yaml

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
# lint-yaml-args += --config-file foo
lint-yaml-args += --strict
lint-yaml-args += --no-warnings

lint-yaml:
	find . \( -name '*.yml' -o -name '*.yaml' \) -type f -print0 \
	    | $(xargs-nrie) yamllint $(lint-yaml-args)

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help ::
	@echo "  lint-yaml          Run yamllint on sources"

# [EOF]
